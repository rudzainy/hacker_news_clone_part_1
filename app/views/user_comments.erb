<div class="container">
  <table>
    <% @comment.each do |comment| %>
    <tr>
      <td><span class="comment-user"><a href="/user_profile/<%= comment.user.id %>"><%= comment.user.name %></a> <%= comment.created_at   %> | on <a href="/view_post/<%= comment.post_id %>"><%= comment.post.title %></a></td>
    </tr>
    <tr>
      <td><%= comment.comment %></td>
    </tr>
    <% end %>
  </table>
</div>
